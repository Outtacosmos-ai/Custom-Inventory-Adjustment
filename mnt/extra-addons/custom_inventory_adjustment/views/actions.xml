<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for Adjustments -->
        <record id="action_inventory_adjustment" model="ir.actions.act_window">
            <field name="name">Inventory Adjustments</field>
            <field name="res_model">inventory.adjustment</field>
            <field name="view_mode">tree,form</field>
            <field name="help">Manage your inventory adjustments here.</field>
        </record>

        <!-- Action for Adjustment Reasons -->
        <record id="action_inventory_adjustment_reason" model="ir.actions.act_window">
            <field name="name">Adjustment Reasons</field>
            <field name="res_model">inventory.adjustment.reason</field>
            <field name="view_mode">tree,form</field>
            <field name="help">Define reasons for inventory adjustments.</field>
        </record>

        <!-- Action for Adjustment Settings -->
        <record id="action_inventory_adjustment_settings" model="ir.actions.act_window">
            <field name="name">Adjustment Settings</field>
            <field name="res_model">inventory.adjustment.settings</field>
            <field name="view_mode">form</field>
            <field name="help">Configure settings for inventory adjustments.</field>
        </record>
    </data>
</odoo>
